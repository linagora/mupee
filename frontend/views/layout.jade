!!!
html(ng-app="myApp")
  head
    meta(charset='utf8')
    base(href='/')
    title Mupee, the Mozilla Updates Proxy
    link(rel='stylesheet', href='/css/foundation/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='lib/foundation/custom.modernizr.js')
    script document.write('<script src=' + ('__proto__' in {} ? 'lib/zepto/zepto' : 'lib/jquery/jquery') + '.js><\/script>')
    script(src='lib/foundation/foundation.min.js')
    script(src='lib/angular/angular.js')
    script(src='lib/angular/angular-route.js')
    script(src='lib/angular/angular-resource.js')
    script(src='js/api.js')
    script(src='js/app.js')
    script(src='js/product.js')
    script(src='js/version.js')
    script(src='js/routeSegment.js')
    script(src='js/upgradeAction.js')

  body(ng-cloak)

  nav.top-bar.hide-for-small

    ul.title-area
      li.name
        h1 
          a(href="#/home") Mupee
      li.toggle-topbar
        a(href="#") Mupee Top Bar
    section.top-bar-section
      ul.right
        li
          a(href='#/Firefox') Firefox
            img(src='/images/firefox_logo_big.png' style="height: 40px; margin-left:1em;") 
              
        li
          a(href='#/Thunderbird') Thunderbird
            img(src='/images/thunderbird_logo_big.png' style="height: 40px; margin-left:1em;") 
              

  block body
